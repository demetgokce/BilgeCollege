@model OgretmenCreateDto


<form method="post" asp-action="Create" asp-controller="Ogretmen">



    <div class="card card-info">
        <div class="card-header">
            <h3 class="card-title">ÖgretmenKayit</h3>
        </div>

        @Html.ValidationSummary()
        <div class="card-body">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"></span>
                </div>
                <label asp-for="@Model.OgretmenDto.Adi" class="col-md-4 col-form-label"></label>
                <input type="text" class="form-control" placeholder="Adi" asp-for="@Model.OgretmenDto.Adi">
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"></span>
                </div>
                <label asp-for="@Model.OgretmenDto.Soyadi" class="col-md-4 col-form-label"></label>
                <input type="text" class="form-control" placeholder="Soyadi" asp-for="@Model.OgretmenDto.Soyadi">
            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"></span>
                </div>
                <label asp-for="@Model.OgretmenDto.TcNo" class="col-md-4 col-form-label"></label>
                <input type="text" class="form-control" placeholder="TcKimlik" asp-for="@Model.OgretmenDto.TcNo">
            </div>


            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                </div>
                <label asp-for="@Model.OgretmenDto.Email" class="col-md-4 col-form-label"></label>
                <input type="email" class="form-control" placeholder="Email" asp-for="@Model.OgretmenDto.Email">
            </div>


            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                </div>
                <label asp-for="@Model.OgretmenDto.DogumTarihi" class="col-md-4 col-form-label"></label>
                <input type="text" class="form-control" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask="" inputmode="numeric" asp-for="@Model.OgretmenDto.DogumTarihi">
            </div>

            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                </div>
                <label asp-for="@Model.OgretmenDto.GirisTarihi" class="col-md-4 col-form-label"></label>
                <input type="text" class="form-control" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask="" inputmode="numeric" asp-for="@Model.OgretmenDto.GirisTarihi">
            </div>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                </div>
                <label asp-for="@Model.OgretmenDto.CikisTarihi" class="col-md-4 col-form-label"></label>
                <input type="text" class="form-control" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask="" inputmode="numeric" asp-for="@Model.OgretmenDto.CikisTarihi">
            </div>





            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
                </div>
                <input type="text" class="form-control" data-inputmask="'mask': ['999-999-9999 [x99999]', '+099 99 99 9999[9]-9999']" data-mask="" inputmode="tel" asp-for="@Model.OgretmenDto.Gsm" placeholder="telegon numarasi">
            </div>


            <input type="checkbox" name="Kadın"> Kadın<br>
            <input type="checkbox" name="Erkek"> Erkek<br>
            <button type="submit" class="btn btn-info">Kayit</button>
            <!-- /input-group -->
        </div>
        <!-- /.card-body -->
    </div>

</form>


