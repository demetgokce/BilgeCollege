@model OgrenciSiniflar



<form method="post" asp-controller="OgrenciSiniflar" asp-action="Delete">

    <div class="form-group row">
        <label asp-for="Ogrenci.OgrenciId" class="col-md-2 col-form-label">@Model.Ogrenci.OgrenciId</label>
    </div>
    <div class="form-group row">
        <label asp-for="Siniflar.SiniflarId" class="col-md-2 col-form-label">@Model.Siniflar.SiniflarId</label>
    </div>

    <p>Bu kaydi Silmek istediginizden eminmisiniz ?</p>
    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Sil</button>
        <a class="btn btn-secondary" asp-action="Index" asp-controller="OgretmenDers">Listeye Geri Dön</a>
    </div>
</form>



